---
    const { title } = Astro.props;
    ---

    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
      </head>
      <body>
        <header>
          <h1>{title}</h1>
          <button id="search-button">Search</button>
        </header>
        <main>
          <slot />
        </main>
        <footer>
          <p>&copy; 2023 My Blog</p>
        </footer>
      </body>
    </html>
